<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:animateLayoutChanges="true"
tools:context=".fragments.CreateProfileDisplayInfoSetupFragment">




<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_content_bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/displaysetup_cardbody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="visible"

        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardheader">

        <FrameLayout
            android:id="@+id/layoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="@dimen/_12sdp"
            android:background="@android:color/transparent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageProfile"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:background="@drawable/background_image"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/graphic_defaultprofphoto"
                app:riv_oval="true" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:defaultFocusHighlightEnabled="false"
            android:fontFamily="@font/open_sans"
            android:text="Edit Display Name"
            android:textColor="@color/primary_purple"
            android:textSize=   "@dimen/_12ssp" />


        <LinearLayout
            android:id="@+id/numberbodycontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@android:color/transparent"
                android:defaultFocusHighlightEnabled="false"
                android:fontFamily="@font/open_sans"
                android:text="@string/displaysetup_prompt"
                android:textColor="@color/primary_purple"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@android:color/transparent"
                android:defaultFocusHighlightEnabled="false"
                android:fontFamily="@font/open_sans"
                android:text="Full Name is Recomendded so Contacts can Recognize you"
                android:textColor="@color/primary_purple"
                android:textSize="@dimen/_12ssp" />


            <EditText
                android:id="@+id/inputFullName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/background_input_field"
                android:hint="@string/full_name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxHeight="30dp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/primary_white"
                android:textColorHint="@color/primary_white"
                android:textSize="@dimen/_13ssp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_displaysetup"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:text="Continue"
                android:textColor="@color/primary_purple"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_14sdp"
                app:strokeColor="@color/primary_purple"
                app:strokeWidth="@dimen/_3sdp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:defaultFocusHighlightEnabled="false"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="@dimen/_8sdp"
            android:text="Username Setup"
            android:textColor="@color/primary_purple"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18sdp"
            android:progressTint="#412691" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>