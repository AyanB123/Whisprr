<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_card_allcorner"
    tools:context=".fragments.ProfileSetupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <LinearLayout
            android:id="@+id/titleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_light"
                android:text="Profile Setup"
                android:textAllCaps="false"
                android:textColor="@color/primary_white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/app_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_logotemp" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/background_content_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleHeader">

            <LinearLayout
                android:id="@+id/usernamenumsetup_cardbody"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardheader">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/username_graphic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:cropToPadding="false"
                    android:src="@drawable/graphic_usernamesetup" />

                <LinearLayout
                    android:id="@+id/usernamebodycontainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/_18sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/usernamesetup_prompt"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />



                    <EditText
                        android:id="@+id/inputUserName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:background="@drawable/background_input_field"
                        android:hint="@string/full_name"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:maxHeight="30dp"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="@dimen/_13ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@android:color/transparent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:autoSizeMaxTextSize="@dimen/_36ssp"
                            android:background="@android:color/transparent"
                            android:defaultFocusHighlightEnabled="false"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/rules"
                            android:textColor="#CC412692"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/notinuse_rule_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/notinuse_rule_graphic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_error" />

                            <TextView
                                android:id="@+id/notinuse_rule_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoSizeMaxTextSize="@dimen/_36ssp"
                                android:background="@android:color/transparent"
                                android:defaultFocusHighlightEnabled="false"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/notinuse_rule_text"
                                android:textColor="#CC412692"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/charlimit_rule_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/charlimit_rule_graphic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_error" />

                            <TextView
                                android:id="@+id/charlimit_rule_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoSizeMaxTextSize="@dimen/_36ssp"
                                android:background="@android:color/transparent"
                                android:defaultFocusHighlightEnabled="false"
                                android:fontFamily="@font/open_sans"
                                android:text="6-30 characters Long"
                                android:textColor="#CC412692"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/symbolallow_rule_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/symbolallow_rule_graphic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_error" />

                            <TextView
                                android:id="@+id/symbolallow_rule_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoSizeMaxTextSize="@dimen/_36ssp"
                                android:background="@android:color/transparent"
                                android:defaultFocusHighlightEnabled="false"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/symbols_not_allowed"
                                android:textColor="#CC412692"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/startend_rule_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"

                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/startend_rule_graphic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_error" />

                            <TextView
                                android:id="@+id/startend_rule_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:autoSizeMaxTextSize="@dimen/_36ssp"
                                android:background="@android:color/transparent"
                                android:defaultFocusHighlightEnabled="false"
                                android:fontFamily="@font/open_sans"
                                android:text="Only start and end with a letter number, or period"
                                android:textColor="#CC412692"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_usernamesetup"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="Continue"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_14sdp"
                        app:strokeColor="@color/primary_purple"
                        app:strokeWidth="@dimen/_3sdp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phonenumsetup_cardbody"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardheader">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/phonenum_graphic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:cropToPadding="false"
                    android:src="@drawable/graphic_phonesetup" />

                <LinearLayout
                    android:id="@+id/numberbodycontainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/_18sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/phonenumsetup_prompt"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/phonenumcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_contentColor="@android:color/transparent"
                            app:ccp_showNameCode="true"
                            app:ccp_textSize="@dimen/_16ssp" />

                        <EditText
                            android:id="@+id/inputNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/background_input_field"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:maxLength="9"
                            android:textColor="@color/primary_white"
                            android:textColorHint="@color/primary_white"
                            android:textSize="@dimen/_16ssp" />


                    </LinearLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_phonenumsetup"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="Continue"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_14sdp"
                        app:strokeColor="@color/primary_purple"
                        app:strokeWidth="@dimen/_3sdp" />


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/displaysetup_cardbody"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone"

                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardheader">

                <FrameLayout
                    android:id="@+id/layoutImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@android:color/transparent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:background="@drawable/background_image"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/graphic_defaultprofphoto"
                        app:riv_oval="true" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="false"
                    android:fontFamily="@font/open_sans"
                    android:text="Edit Display Name"
                    android:textColor="@color/primary_purple"
                    android:textSize="@dimen/_12ssp" />


                <LinearLayout
                    android:id="@+id/displaynamecontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/_18sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/displaysetup_prompt"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans"
                        android:text="Full Name is Recomendded so Contacts can Recognize you"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_12ssp" />


                    <EditText
                        android:id="@+id/inputFullName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:background="@drawable/background_input_field"
                        android:hint="@string/full_name"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:maxHeight="30dp"
                        android:paddingStart="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_16sdp"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="@dimen/_13ssp" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_displaysetup"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="Continue"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_14sdp"
                        app:strokeColor="@color/primary_purple"
                        app:strokeWidth="@dimen/_3sdp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilesetup_cardbody"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:animateLayoutChanges="true"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardheader">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/email_graphic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:src="@drawable/graphic_profilesetup" />

                <LinearLayout
                    android:id="@+id/bodycontainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/_18sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Email being used for profile setup:"

                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profilesignupemail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@android:color/transparent"
                        android:defaultFocusHighlightEnabled="false"
                        android:fontFamily="@font/open_sans"
                        android:textAlignment="center"
                        android:textColor="@color/primary_grey"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_setupprofile"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:text="Continue"
                        android:textColor="@color/primary_purple"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_14sdp"
                        app:strokeColor="@color/primary_purple"
                        app:strokeWidth="@dimen/_3sdp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:defaultFocusHighlightEnabled="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="Let's Setup your Profile"
                    android:textColor="@color/primary_purple"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:progressTint="#412691" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>